@model Firmness.Web.ViewModels.Sales.SaleFormViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrWhiteSpace(Model.CustomerName) || !string.IsNullOrWhiteSpace(Model.CustomerEmail))
            {
                <div>@Model.CustomerName</div>
                @if (!string.IsNullOrWhiteSpace(Model.CustomerEmail))
                {
                    <div><a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a></div>
                }
            }
            else
            {
                @Model.CustomerId
            }
        </dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>