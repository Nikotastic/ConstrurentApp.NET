@model Firmness.Web.ViewModels.Sales.SaleFormViewModel
@using Firmness.Domain.Enums

@{
    ViewData["Title"] = "Sale Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-receipt"></i> Sale Details</h4>
                    <div>
                        <a asp-action="DownloadReceipt" asp-route-id="@Model.Id" class="btn btn-light btn-sm">
                            <i class="bi bi-download"></i> Download Receipt
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Sale ID & Invoice -->
                        <div class="col-md-12 mb-4">
                            <div class="alert alert-light border">
                                <div class="row">
                                    <div class="col-md-4">
                                        <strong>Sale ID:</strong><br/>
                                        <code>@Model.Id</code>
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Invoice Number:</strong><br/>
                                        @if (!string.IsNullOrWhiteSpace(Model.InvoiceNumber))
                                        {
                                            <span class="badge bg-primary">@Model.InvoiceNumber</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Date:</strong><br/>
                                        @Model.CreatedAt.ToString("dddd, MMMM dd, yyyy")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <!-- Customer Information -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Customer Information</h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrWhiteSpace(Model.CustomerName))
                                    {
                                        <p class="mb-2">
                                            <i class="bi bi-person"></i> <strong>Name:</strong><br/>
                                            <span class="ms-3">@Model.CustomerName</span>
                                        </p>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(Model.CustomerEmail))
                                    {
                                        <p class="mb-2">
                                            <i class="bi bi-envelope"></i> <strong>Email:</strong><br/>
                                            <span class="ms-3"><a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a></span>
                                        </p>
                                    }
                                    <p class="mb-0">
                                        <i class="bi bi-key"></i> <strong>Customer ID:</strong><br/>
                                        <span class="ms-3"><code>@Model.CustomerId</code></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Payment & Status -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0"><i class="bi bi-credit-card"></i> Payment & Status</h5>
                                </div>
                                <div class="card-body">
                                    <p class="mb-3">
                                        <strong>Status:</strong><br/>
                                        @{
                                            var statusClass = Model.Status switch
                                            {
                                                SaleStatus.Completed => "success",
                                                SaleStatus.Pending => "warning",
                                                SaleStatus.Cancelled => "danger",
                                                SaleStatus.Processing => "info",
                                                SaleStatus.Refunded => "secondary",
                                                _ => "secondary"
                                            };
                                            var statusIcon = Model.Status switch
                                            {
                                                SaleStatus.Completed => "check-circle-fill",
                                                SaleStatus.Pending => "clock-fill",
                                                SaleStatus.Cancelled => "x-circle-fill",
                                                SaleStatus.Processing => "arrow-repeat",
                                                SaleStatus.Refunded => "arrow-counterclockwise",
                                                _ => "question-circle"
                                            };
                                        }
                                        <span class="badge bg-@statusClass fs-6">
                                            <i class="bi bi-@statusIcon"></i> @Model.Status.ToString()
                                        </span>
                                    </p>
                                    
                                    <p class="mb-0">
                                        <strong>Payment Method:</strong><br/>
                                        @{
                                            var paymentIcon = Model.PaymentMethod switch
                                            {
                                                PaymentMethod.Cash => "ðŸ’µ",
                                                PaymentMethod.Card => "ðŸ’³",
                                                PaymentMethod.BankTransfer => "ðŸ¦",
                                                PaymentMethod.Electronic => "ðŸ“±",
                                                PaymentMethod.Check => "ðŸ“",
                                                PaymentMethod.StoreCredit => "ðŸŽ",
                                                _ => "ðŸ’°"
                                            };
                                        }
                                        <span class="badge bg-primary fs-6">
                                            @paymentIcon @Model.PaymentMethod.ToString()
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Financial Summary -->
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="card border-warning">
                                <div class="card-header bg-warning">
                                    <h5 class="mb-0"><i class="bi bi-calculator"></i> Financial Summary</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm mb-0">
                                        <tbody>
                                            <tr>
                                                <td class="text-end fw-bold" style="width: 80%;">Subtotal:</td>
                                                <td class="text-end">@Model.Subtotal.ToString("C")</td>
                                            </tr>
                                            <tr>
                                                <td class="text-end fw-bold">Tax:</td>
                                                <td class="text-end">@Model.Tax.ToString("C")</td>
                                            </tr>
                                            <tr>
                                                <td class="text-end fw-bold">Discount:</td>
                                                <td class="text-end text-danger">-@Model.Discount.ToString("C")</td>
                                            </tr>
                                            <tr class="table-active">
                                                <td class="text-end fw-bold fs-5">Total Amount:</td>
                                                <td class="text-end fw-bold fs-5 text-success">@Model.TotalAmount.ToString("C")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Notes -->
                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-12 mb-4">
                                <div class="card border-secondary">
                                    <div class="card-header bg-secondary text-white">
                                        <h5 class="mb-0"><i class="bi bi-sticky"></i> Additional Notes</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Notes</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <!-- Action Buttons -->
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil"></i> Edit Sale
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>