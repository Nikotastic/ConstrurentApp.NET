@model Firmness.Admin.Web.ViewModels.Sales.SaleFormViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrWhiteSpace(Model.CustomerName) || !string.IsNullOrWhiteSpace(Model.CustomerEmail))
            {
                <div>@Model.CustomerName</div>
                @if (!string.IsNullOrWhiteSpace(Model.CustomerEmail))
                {
                    <div><a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a></div>
                }
            }
            else
            {
                @Model.CustomerId
            }
        </dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToShortDateString()</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>