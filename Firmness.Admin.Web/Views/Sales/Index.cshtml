@model IEnumerable<Firmness.Domain.Entities.Sale>

@{
    ViewData["Title"] = "Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Sales</h1>
    <div>
        <a class="btn btn-success me-2" asp-action="ExportToExcel" title="Exportar a Excel">
            <i class="bi bi-file-excel"></i> Excel
        </a>
        <a class="btn btn-danger me-2" asp-action="ExportToPdf" title="Exportar a PDF">
            <i class="bi bi-file-pdf"></i> PDF
        </a>
        <a class="btn btn-primary" asp-action="Create">New Sale</a>
    </div>
</div>
@await Html.PartialAsync("_SearchBar")
<table class="table">
    <thead>
    <tr>
        <th>Date Created</th>
        <th>
            @Html.DisplayNameFor(model => model.Customer)
        </th>
        <th>Total</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            <a asp-action="DownloadReceipt" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Descargar Recibo">
                <i class="bi bi-download"></i> Recibo
            </a>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
</tbody>
</table>
