@model Firmness.Admin.Web.ViewModels.Product.ProductFormViewModel
@{
    ViewData["Title"] = "Detalle de producto";
}

<h2>@Model.Name</h2>

<div class="row mb-3">
    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        }
    </div>
    <div class="col-md-8">
        <p><strong>SKU:</strong> @Model.SKU</p>
        <p><strong>Precio:</strong> @Model.Price?.ToString("C")</p>
        <p><strong>Stock:</strong> @Model.Stock</p>
        <p><strong>Descripci√≥n:</strong></p>
        <div class="border rounded p-2">@Model.Description</div>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>