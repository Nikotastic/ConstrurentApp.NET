@model Firmness.Web.ViewModels.Product.ProductFormViewModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-box-seam me-2"></i>Product Details
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left column -->
        <div class="col-lg-8">
            <!-- Basic information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h4 class="mb-3">@Model.Name</h4>
                            <dl class="row">
                                <dt class="col-sm-4">SKU:</dt>
                                <dd class="col-sm-8"><code class="fs-6">@Model.SKU</code></dd>
                                
                                @if (!string.IsNullOrWhiteSpace(Model.Barcode))
                                {
                                    <dt class="col-sm-4">Bar-code:</dt>
                                    <dd class="col-sm-8"><code>@Model.Barcode</code></dd>
                                }
                                
                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrWhiteSpace(Model.CategoryName))
                                    {
                                        <span class="badge bg-info fs-6">@Model.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Uncategorized</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-x-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" 
                                     style="max-height: 300px; width: 100%; object-fit: contain; background-color: #f8f9fa;"
                                     onerror="this.src='https://via.placeholder.com/400x300?text=Sin+Imagen'" />
                            }
                            else
                            {
                                <div class="text-center p-5 bg-light rounded">
                                    <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                                    <p class="text-muted mt-2">No image</p>
                                </div>
                            }
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Description:</h6>
                            <p class="border rounded p-3 bg-light">@Model.Description</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Prices and inventory -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Financial Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Cost</small>
                                <h4 class="mb-0 text-warning">
                                    @if (Model.Cost.HasValue)
                                    {
                                        @Model.Cost.Value.ToString("C")
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Sale price</small>
                                <h4 class="mb-0 text-success">@Model.Price?.ToString("C")</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Revenue</small>
                                <h4 class="mb-0 text-primary">
                                    @if (Model.Cost.HasValue && Model.Price.HasValue)
                                    {
                                        var profit = Model.Price.Value - Model.Cost.Value;
                                        @profit.ToString("C")
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3 bg-light rounded">
                                <small class="text-muted d-block mb-1">Margin</small>
                                <h4 class="mb-0">
                                    @if (Model.Cost.HasValue && Model.Price.HasValue && Model.Cost.Value > 0)
                                    {
                                        var margin = ((Model.Price.Value - Model.Cost.Value) / Model.Cost.Value * 100);
                                        var marginClass = margin >= 20 ? "text-success" : (margin >= 10 ? "text-warning" : "text-danger");
                                        <span class="@marginClass">@margin.ToString("F2")%</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right column -->
        <div class="col-lg-4">
            <!-- Stock -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-boxes me-2"></i>Inventory</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Current Stock</span>
                            <h3 class="mb-0">
                                @if (Model.MinStock.HasValue && Model.Stock <= Model.MinStock.Value)
                                {
                                    <span class="text-danger">
                                        @Model.Stock <i class="bi bi-exclamation-triangle ms-1"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="text-success">@Model.Stock</span>
                                }
                            </h3>
                        </div>
                        
                        @if (Model.MinStock.HasValue)
                        {
                            <div class="progress" style="height: 25px;">
                                @{
                                    var stockPercentage = Model.MinStock.HasValue && Model.MinStock.Value > 0 
                                        ? Math.Min((double)(Model.Stock / Model.MinStock.Value) * 100, 100) 
                                        : 100;
                                    var progressClass = stockPercentage > 50 ? "bg-success" : (stockPercentage > 25 ? "bg-warning" : "bg-danger");
                                }
                                <div class="progress-bar @progressClass" role="progressbar" 
                                     style="width: @stockPercentage%">
                                    @stockPercentage.ToString("F0")%
                                </div>
                            </div>
                            <small class="text-muted">Minimum stock: @Model.MinStock</small>
                        }
                        
                        @if (Model.MinStock.HasValue && Model.Stock <= Model.MinStock.Value)
                        {
                            <div class="alert alert-warning mt-3 mb-0">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>Low stock!</strong> It is necessary to restock.
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Total value in inventory -->
            <div class="card shadow-sm mb-4 bg-light">
                <div class="card-body">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-calculator me-2"></i>Inventory Value
                    </h6>
                    <dl class="row mb-0">
                        @if (Model.Cost.HasValue)
                        {
                            <dt class="col-7">At cost:</dt>
                            <dd class="col-5 text-end">
                                <strong>@((Model.Cost.Value * Model.Stock ?? 0).ToString("C"))</strong>
                            </dd>
                        }
                        <dt class="col-7">At selling price:</dt>
                        <dd class="col-5 text-end">
                            <strong class="text-success">@((Model.Price ?? 0 * Model.Stock ?? 0).ToString("C"))</strong>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-gear me-2"></i>Actions
                    </h6>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Product
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i>Remove Product
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-list me-2"></i>View All Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
