@model Firmness.Core.Common.PaginatedResult<Firmness.Core.Entities.Product>
@{
    ViewData["Title"] = "Productos";
    var q = ViewData["Query"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Productos</h1>
    <div>
        <a class="btn btn-primary" asp-action="Create">Nuevo producto</a>
    </div>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="search" name="q" value="@q" class="form-control" placeholder="Buscar por nombre, SKU o descripciÃ³n..." />
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Limpiar</a>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Nombre</th>
            <th>Stock</th>
            <th>Imagen</th>
            <th class="text-end">Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.SKU</td>
                <td>@item.Name</td>
                <td>@item.Stock</td>
                <td>@item.ImageUrl</td>
                <td class="text-end">@item.Price.ToString("C")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Total > Model.PageSize)
{
    <nav>
        <ul class="pagination">
            @{
                var pages = (int)Math.Ceiling((double)Model.Total / Model.PageSize);
                for (int i = 1; i <= pages; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-q="@q">@i</a>
                    </li>
                }
            }
        </ul>
    </nav>
}