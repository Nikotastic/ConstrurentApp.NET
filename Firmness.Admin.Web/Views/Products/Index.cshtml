@model Firmness.Domain.Common.PaginatedResult<Firmness.Domain.Entities.Product>
@{
    ViewData["Title"] = "Products";
    var q = ViewData["Query"] as string;
    var categoryId = ViewData["CategoryId"] as Guid?;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Products</h1>
    <div>
        <a class="btn btn-success me-2" asp-action="ExportToExcel" asp-route-categoryId="@categoryId" title="Export to Excel">
            <i class="bi bi-file-excel"></i> Excel
        </a>
        <a class="btn btn-danger me-2" asp-action="ExportToPdf" asp-route-categoryId="@categoryId" title="Export to PDF">
            <i class="bi bi-file-pdf"></i> PDF
        </a>
        <a class="btn btn-warning me-2" asp-controller="BulkImport" asp-action="Index" title="Bulk Data Import">
            <i class="bi bi-upload"></i> Import
        </a>
        <a class="btn btn-primary" asp-action="Create">New product</a>
    </div>
</div>

<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-6">
            <input type="search" name="q" value="@q" class="form-control" placeholder="Search by name, SKU, barcode..." />
        </div>
        <div class="col-md-4">
            <select name="categoryId" class="form-select" onchange="this.form.submit()">
                <option value="">All categories</option>
                @foreach (var cat in ViewBag.Categories as IEnumerable<SelectListItem>)
                {
                    <option value="@cat.Value" selected="@cat.Selected">@cat.Text</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100" type="submit">Search</button>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(q) || categoryId.HasValue)
    {
        <div class="mt-2">
            <a class="btn btn-sm btn-outline-secondary" asp-action="Index">
                <i class="bi bi-x-circle"></i> Clean filters
            </a>
        </div>
    }
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Category</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td><code>@item.SKU</code></td>
                        <td>@item.Name</td>
                        <td>
                            @if (item.Category != null)
                            {
                                <span class="badge bg-info">@item.Category.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Uncategorized</span>
                            }
                        </td>
                        <td>
                            @if (item.MinStock.HasValue && item.Stock <= item.MinStock.Value)
                            {
                                <span class="badge bg-danger">@item.Stock (Low)</span>
                            }
                            else
                            {
                                @item.Stock
                            }
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td class="text-truncate" style="max-width: 200px;">@item.Description</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1" title="View details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                        No products were found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.Total > Model.PageSize)
{
    <nav aria-label="Product pagination">
        <ul class="pagination justify-content-center">
            @{
                var pages = (int)Math.Ceiling((double)Model.Total / Model.PageSize);
                var startPage = Math.Max(1, Model.Page - 2);
                var endPage = Math.Min(pages, Model.Page + 2);
                
                if (Model.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-q="@q" asp-route-categoryId="@categoryId">Fist</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" asp-route-q="@q" asp-route-categoryId="@categoryId">Previously</a>
                    </li>
                }
                
                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-q="@q" asp-route-categoryId="@categoryId">@i</a>
                    </li>
                }
                
                if (Model.Page < pages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" asp-route-q="@q" asp-route-categoryId="@categoryId">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@pages" asp-route-q="@q" asp-route-categoryId="@categoryId">Ãšltima</a>
                    </li>
                }
            }
        </ul>
        <p class="text-center text-muted">
            Showing @Model.Items.Count() of @Model.Total products
        </p>
    </nav>
}
else if (Model.Total > 0)
{
    <p class="text-center text-muted">
        Showing @Model.Total product(s)
    </p>
}
