@model Firmness.Admin.Web.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Bienvenido";
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? "invitado";
}

<h1 class="mb-4">Bienvenido, @userName</h1>

<div class="container py-5">

    @if (!isAuthenticated)
    {
        <section class="row justify-content-center mb-5">
            <div class="col-md-8">
                <div class="p-4 bg-light rounded shadow-sm text-center">
                    <h2 class="display-6">Bienvenido a Firmness</h2>
                    <p class="lead text-muted">
                        Por favor inicie sesión o regístrese para acceder al panel administrativo y funcionalidades completas.
                    </p>
                    <div class="mt-3">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary me-2">Iniciar sesión</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary">Registrarse</a>
                    </div>
                </div>
            </div>
        </section>
    }

    <div class="row">
        <aside class="col-md-2 d-none d-md-block bg-light vh-100 px-0">
            @await Html.PartialAsync("_Sidebar")
        </aside>

        <main class="col-md-10">
            <section class="row g-4 mt-3">
                <div class="col-sm-6 col-md-4">
                    <div class="card text-white bg-primary h-100">
                        <div class="card-body text-center">
                            <h6 class="card-title">Productos</h6>
                            <div class="display-6">@Model.TotalProducts</div>
                            <p class="card-text small text-white-50">Total de productos</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-4">
                    <div class="card text-white bg-success h-100">
                        <div class="card-body text-center">
                            <h6 class="card-title">Clientes</h6>
                            <div class="display-6">@Model.TotalCustomers</div>
                            <p class="card-text small text-white-50">Total de clientes</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-md-4">
                    <div class="card text-white bg-info h-100">
                        <div class="card-body text-center">
                            <h6 class="card-title">Ventas</h6>
                            <div class="display-6">@Model.TotalSales</div>
                            <p class="card-text small text-white-50">Total de ventas</p>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</div>