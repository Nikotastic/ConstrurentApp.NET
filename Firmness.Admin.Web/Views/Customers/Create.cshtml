@model Firmness.Web.ViewModels.Customer.CustomerFormViewModel

@{
    ViewData["Title"] = "Create Client";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-person-plus me-2"></i>Create New Client
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
    </div>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        
        <div class="row">
            <!-- Left column -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-person-vcard me-2"></i>Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="Ex: Juan" required />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Ex: PÃ©rez" required />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Document" class="form-label fw-bold"></label>
                                <input asp-for="Document" class="form-control" placeholder="Ex: 123456789" required />
                                <span asp-validation-for="Document" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" type="email" 
                                           placeholder="ejemplo@email.com" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Phone" class="form-control" type="tel" 
                                           placeholder="Ex: +57 300 123 4567" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhotoUrl" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-image"></i></span>
                                    <input asp-for="PhotoUrl" class="form-control" 
                                           placeholder="https://ejemplo.com/foto.jpg" />
                                </div>
                                <span asp-validation-for="PhotoUrl" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Address" class="form-label fw-bold"></label>
                                <textarea asp-for="Address" class="form-control" rows="3" 
                                          placeholder="Customer's full address..."></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right column -->
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-gear me-2"></i>State</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                            <div class="form-text">The customer will be active and able to make purchases</div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4 bg-light">
                    <div class="card-body">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-info-circle me-2"></i>Information
                        </h6>
                        <ul class="small text-muted mb-0">
                            <li>Fields marked with these fields are required</li>
                            <li>The document must be unique</li>
                            <li>The email address will be used for notifications</li>
                            <li>The photo is optional</li>
                        </ul>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle me-2"></i>Create Client
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
