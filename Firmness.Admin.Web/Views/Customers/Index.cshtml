@model IEnumerable<Firmness.Domain.Entities.Customer>

@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Customers</h1>
    <div>
        <a class="btn btn-success me-2" asp-action="ExportToExcel" title="Exportar a Excel">
            <i class="bi bi-file-excel"></i> Excel
        </a>
        <a class="btn btn-danger me-2" asp-action="ExportToPdf" title="Exportar a PDF">
            <i class="bi bi-file-pdf"></i> PDF
        </a>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
</div>

@await Html.PartialAsync("_SearchBar")
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Fist Name</th>
            <th>Last Name</th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>Photo</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoFile)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
