@model Firmness.Domain.Common.PaginatedResult<Firmness.Domain.Entities.Customer>

@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var q = ViewData["Query"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Customers</h1>
    <div>
        <a class="btn btn-success me-2" asp-action="ExportToExcel" title="Export to Excel">
            <i class="bi bi-file-excel"></i> Excel
        </a>
        <a class="btn btn-danger me-2" asp-action="ExportToPdf" title="Export to PDF">
            <i class="bi bi-file-pdf"></i> PDF
        </a>
        <a class="btn btn-warning me-2" asp-controller="BulkImport" asp-action="Index" title="Bulk Data Import">
            <i class="bi bi-upload"></i> Import
        </a>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="search" name="q" value="@q" class="form-control" placeholder="Search by name, email, document..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Clear</a>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>@Html.DisplayNameFor(model => model.Items.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.Items.First().Phone)</th>
            <th>@Html.DisplayNameFor(model => model.Items.First().Document)</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>@item.Id.ToString().Substring(0, 8)...</td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>@Html.DisplayFor(modelItem => item.Document)</td>
            <td>
                @if (!string.IsNullOrEmpty(item.PhotoUrl))
                {
                    <img src="@item.PhotoUrl" alt="Photo" style="width: 40px; height: 40px; object-fit: cover;" />
                }
                else
                {
                    <span class="text-muted">No photo</span>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@* Paginaci칩n *@
@if (Model.TotalPages > 1)
{
    <nav aria-label="Customer pagination">
        <ul class="pagination justify-content-center">
            @* Bot칩n anterior *@
            <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" asp-route-q="@q">
                    <i class="bi bi-chevron-left"></i> Last
                </a>
            </li>

            @* P치ginas *@
            @{
                var startPage = Math.Max(1, Model.Page - 2);
                var endPage = Math.Min(Model.TotalPages, Model.Page + 2);
                
                if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-q="@q">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-q="@q">@i</a>
                    </li>
                }

                if (endPage < Model.TotalPages)
                {
                    if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-q="@q">@Model.TotalPages</a>
                    </li>
                }
            }

            @* Bot칩n siguiente *@
            <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" asp-route-q="@q">
                   Next <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>

    <div class="text-center text-muted mb-3">
        <small>Showing @Model.Items.Count() of @Model.TotalItems customers (Page @Model.Page of @Model.TotalPages)</small>
    </div>
}
