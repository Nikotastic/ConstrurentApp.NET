@model Firmness.Web.ViewModels.Customer.CustomerFormViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-person me-2"></i>Customer Details
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left column -->
        <div class="col-lg-8">
            <!-- Customer information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-vcard me-2"></i>Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="mb-4">@Model.FullName</h3>
                            
                            <dl class="row">
                                <dt class="col-sm-4"><i class="bi bi-person me-2"></i>Name:</dt>
                                <dd class="col-sm-8">@Model.FirstName</dd>

                                <dt class="col-sm-4"><i class="bi bi-person me-2"></i>Last name:</dt>
                                <dd class="col-sm-8">@Model.LastName</dd>

                                <dt class="col-sm-4"><i class="bi bi-card-text me-2"></i>Document:</dt>
                                <dd class="col-sm-8"><code class="fs-6">@Model.Document</code></dd>

                                <dt class="col-sm-4"><i class="bi bi-envelope me-2"></i>Email:</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </dd>

                                @if (!string.IsNullOrWhiteSpace(Model.Phone))
                                {
                                    <dt class="col-sm-4"><i class="bi bi-telephone me-2"></i>Phone:</dt>
                                    <dd class="col-sm-8">
                                        <a href="tel:@Model.Phone">@Model.Phone</a>
                                    </dd>
                                }

                                @if (!string.IsNullOrWhiteSpace(Model.Address))
                                {
                                    <dt class="col-sm-4"><i class="bi bi-geo-alt me-2"></i>Address:</dt>
                                    <dd class="col-sm-8">@Model.Address</dd>
                                }

                                <dt class="col-sm-4"><i class="bi bi-calendar me-2"></i>Date of Registration:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4"><i class="bi bi-activity me-2"></i>State:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-x-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrWhiteSpace(Model.PhotoUrl))
                            {
                                <img src="@Model.PhotoUrl" class="img-fluid rounded-circle shadow" 
                                     alt="@Model.FullName" 
                                     style="width: 200px; height: 200px; object-fit: cover;"
                                     onerror="this.src='https://ui-avatars.com/api/?name=@Model.FullName&size=200&background=0D6EFD&color=fff'" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" 
                                     style="width: 200px; height: 200px; font-size: 4rem;">
                                    @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Activity Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <h4 class="text-primary mb-1">0</h4>
                                <small class="text-muted">Total Purchases</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <h4 class="text-success mb-1">$0.00</h4>
                                <small class="text-muted">Total Spent</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded">
                                <h4 class="text-warning mb-1">$0.00</h4>
                                <small class="text-muted">Average per Purchase</small>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-muted"><i class="bi bi-info-circle me-1"></i>Statistics calculated from the record</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right column -->
        <div class="col-lg-4">
            <!-- Quick contact information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Quick Contact</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                            <i class="bi bi-envelope me-2"></i>Send Email
                        </a>
                        @if (!string.IsNullOrWhiteSpace(Model.Phone))
                        {
                            <a href="tel:@Model.Phone" class="btn btn-outline-success">
                                <i class="bi bi-telephone me-2"></i>Phone
                            </a>
                            <a href="https://wa.me/@Model.Phone.Replace(" ", "").Replace("+", "")" 
                               target="_blank" class="btn btn-outline-success">
                                <i class="bi bi-whatsapp me-2"></i>WhatsApp
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Customer status -->
            <div class="card shadow-sm mb-4 @(Model.IsActive ? "border-success" : "border-warning")">
                <div class="card-body">
                    <h6 class="@(Model.IsActive ? "text-success" : "text-warning") mb-3">
                        <i class="bi bi-@(Model.IsActive ? "check-circle" : "exclamation-triangle") me-2"></i>
                        Customer Status
                    </h6>
                    @if (Model.IsActive)
                    {
                        <p class="mb-0">This client is<strong> active</strong> and can make purchases..</p>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <strong>Attention:</strong> This customer is inactive and cannot make purchases.
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-gear me-2"></i>Actions
                    </h6>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Client
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i>Delete Client
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-list me-2"></i>View All Clients
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
