@model Firmness.Web.ViewModels.Customer.CustomerFormViewModel

@{
    ViewData["Title"] = "Edit Client";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-pencil-square me-2"></i>Edit Client
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to list
        </a>
    </div>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        
        <div class="row">
            <!-- Left column -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-person-vcard me-2"></i>Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold"></label>
                                <input asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold"></label>
                                <input asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Document" class="form-label fw-bold"></label>
                                <input asp-for="Document" class="form-control" required />
                                <span asp-validation-for="Document" class="text-danger small"></span>
                                <small class="text-muted">The document must be unique.</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" type="email" required />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="Phone" class="form-control" type="tel" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhotoUrl" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-image"></i></span>
                                    <input asp-for="PhotoUrl" class="form-control" />
                                </div>
                                <span asp-validation-for="PhotoUrl" class="text-danger small"></span>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.PhotoUrl))
                            {
                                <div class="col-12">
                                    <label class="form-label fw-bold">Preview:</label>
                                    <div class="mt-2">
                                        <img src="@Model.PhotoUrl" alt="Customer photo" 
                                             class="img-thumbnail" style="max-width: 150px; max-height: 150px;" 
                                             onerror="this.style.display='none'" />
                                    </div>
                                </div>
                            }

                            <div class="col-12">
                                <label asp-for="Address" class="form-label fw-bold"></label>
                                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right column -->
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-gear me-2"></i>State</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                            <div class="form-text">
                                @if (Model.IsActive)
                                {
                                    <span class="text-success"><i class="bi bi-check-circle"></i> Active client</span>
                                }
                                else
                                {
                                    <span class="text-warning"><i class="bi bi-exclamation-circle"></i> Inactive client</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4 border-warning">
                    <div class="card-body">
                        <h6 class="text-warning mb-2">
                            <i class="bi bi-exclamation-triangle me-2"></i>Important
                        </h6>
                        <ul class="small mb-0">
                            <li>The changes will be applied immediately</li>
                            <li>Please verify that the email address is correct</li>
                            <li>The document must be unique</li>
                        </ul>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="bi bi-eye me-2"></i>View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
