@model Firmness.Domain.Common.PaginatedResult<Firmness.Domain.Entities.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var q = ViewData["Query"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">
        <i class="bi bi-tags-fill me-2"></i>Category
    </h1>
    <div>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> New Category
        </a>
    </div>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="search" name="q" value="@q" class="form-control" placeholder="Search by name or description..." />
        <button class="btn btn-outline-secondary" type="submit">
            <i class="bi bi-search"></i> Search
        </button>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-x-circle"></i> Clear
        </a>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-center">Products</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Creation Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <strong>@item.Name</strong>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <span>@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</span>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No description</span>
                        }
                    </td>
                    <td class="text-center">
                        <span class="badge bg-info text-dark">
                            @item.Products.Count
                        </span>
                    </td>
                    <td class="text-center">
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-x-circle"></i> Inactive
                            </span>
                        }
                    </td>
                    <td class="text-center">
                        <small>@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-warning toggle-active" 
                                    data-id="@item.Id" 
                                    data-active="@item.IsActive.ToString().ToLower()"
                                    title="@(item.IsActive ? "Deactivate": "Activate")">
                                <i class="bi bi-@(item.IsActive ? "eye-slash" : "eye")"></i>
                            </button>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @* Paginación *@
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Category pagination">
            <ul class="pagination justify-content-center">
                @* Botón anterior *@
                <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" asp-route-q="@q">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>

                @* Páginas *@
                @{
                    var startPage = Math.Max(1, Model.Page - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.Page + 2);
                    
                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-q="@q">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-q="@q">@i</a>
                        </li>
                    }

                    if (endPage < Model.TotalPages)
                    {
                        if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-q="@q">@Model.TotalPages</a>
                        </li>
                    }
                }

                @* Botón siguiente *@
                <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" asp-route-q="@q">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center text-muted mb-3">
            <small>Showing @Model.Items.Count() from @Model.TotalItems categories (Page @Model.Page from @Model.TotalPages)</small>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        @if (!string.IsNullOrWhiteSpace(q))
        {
            <span>No matching categories were found "<strong>@q</strong>".</span>
        }
        else
        {
            <span>There are no registered categories. <a asp-action="Create">Create the first category</a></span>
        }
    </div>
}

@section Scripts {
<script>
    // Toggle Active/Inactive
    document.querySelectorAll('.toggle-active').forEach(button => {
        button.addEventListener('click', async function() {
            const id = this.dataset.id;
            const isActive = this.dataset.active === 'true';
            
            if (confirm(`Are you sure about ${isActive ? 'deactivate' : 'activate'} this category?`)) {
                try {
                    const response = await fetch(`/Categories/ToggleActive/${id}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        }
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + (result.message || 'The state could not be changed'));
                    }
                } catch (error) {
                    alert('Error changing state: ' + error.message);
                }
            }
        });
    });
</script>
}

