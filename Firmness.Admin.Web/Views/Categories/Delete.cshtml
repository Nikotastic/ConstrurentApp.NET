@model Firmness.Web.ViewModels.Category.CategoryFormViewModel

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Category
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-circle me-2"></i>Are you sure you want to delete this category?
                    </h5>
                    <p class="mb-0">This action cannot be undone.</p>
                    @if (Model.ProductCount > 0)
                    {
                        <hr>
                        <p class="mb-0">
                            <strong>Warning:</strong> This category has<strong>@Model.ProductCount product@(Model.ProductCount != 1 ? "s" : "")</strong> associated@(Model.ProductCount != 1 ? "s" : "").
                            By removing it, the products will become uncategorized.
                        </p>
                    }
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">
                        <strong>@Model.Name</strong>
                    </dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <span>@Model.Description</span>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No description</span>
                        }
                    </dd>

                    <dt class="col-sm-3">State</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Products</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info text-dark">@Model.ProductCount</span>
                    </dd>

                    @if (Model.CreatedAt.HasValue)
                    {
                        <dt class="col-sm-3">Date of Creation</dt>
                        <dd class="col-sm-9">
                            <small>@Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                        </dd>
                    }
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Confirm Deletion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
