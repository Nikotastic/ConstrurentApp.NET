@model Firmness.Web.Controllers.DashboardViewModel
@using Firmness.Domain.Enums

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold"><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
            <p class="text-muted">Welcome back! Here's what's happening with your store today.</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <!-- Total Revenue -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase mb-2">Total Revenue</h6>
                            <h2 class="mb-0 fw-bold text-success">@Model.TotalRevenue.ToString("C")</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-currency-dollar text-success fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up"></i> All time
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Sales -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase mb-2">Total Sales</h6>
                            <h2 class="mb-0 fw-bold text-primary">@Model.TotalSales</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cart-check text-primary fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-warning bg-opacity-10 text-warning me-2">
                            @Model.PendingSales Pending
                        </span>
                        <span class="badge bg-success bg-opacity-10 text-success">
                            @Model.CompletedSales Completed
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Products -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase mb-2">Total Products</h6>
                            <h2 class="mb-0 fw-bold text-info">@Model.TotalProducts</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-box-seam text-info fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Products" asp-action="Index" class="text-decoration-none">
                            <span class="badge bg-info bg-opacity-10 text-info">
                                View all <i class="bi bi-arrow-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Customers -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted text-uppercase mb-2">Total Customers</h6>
                            <h2 class="mb-0 fw-bold text-warning">@Model.TotalCustomers</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people text-warning fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Customers" asp-action="Index" class="text-decoration-none">
                            <span class="badge bg-warning bg-opacity-10 text-warning">
                                View all <i class="bi bi-arrow-right"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Recent Sales -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-clock-history"></i> Recent Sales</h5>
                    <a asp-controller="Sales" asp-action="Index" class="btn btn-sm btn-outline-primary">
                        View All <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentSales.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Invoice</th>
                                        <th>Customer</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Payment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sale in Model.RecentSales)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Sales" asp-action="Details" asp-route-id="@sale.Id" class="text-decoration-none">
                                                    <code>@sale.Id.ToString().Substring(0, 8)</code>
                                                </a>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                                        <i class="bi bi-person text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@sale.Customer?.FullName</div>
                                                        <small class="text-muted">@sale.Customer?.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><small>@sale.CreatedAt.ToString("MMM dd, yyyy")</small></td>
                                            <td><strong class="text-success">@sale.TotalAmount.ToString("C")</strong></td>
                                            <td>
                                                @{
                                                    var statusClass = sale.Status switch
                                                    {
                                                        SaleStatus.Completed => "success",
                                                        SaleStatus.Pending => "warning",
                                                        SaleStatus.Cancelled => "danger",
                                                        SaleStatus.Processing => "info",
                                                        SaleStatus.Refunded => "secondary",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@sale.Status</span>
                                            </td>
                                            <td>
                                                @{
                                                    var paymentIcon = sale.PaymentMethod switch
                                                    {
                                                        PaymentMethod.Cash => "💵",
                                                        PaymentMethod.Card => "💳",
                                                        PaymentMethod.BankTransfer => "🏦",
                                                        PaymentMethod.Electronic => "📱",
                                                        _ => "💰"
                                                    };
                                                }
                                                <small>@paymentIcon</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No recent sales</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Low Stock Products & Top Customers -->
        <div class="col-lg-4">
            <!-- Low Stock Alert -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle text-warning"></i> Low Stock</h5>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-warning">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.LowStockProducts.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var product in Model.LowStockProducts)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-semibold">@product.Name</div>
                                            <small class="text-muted">SKU: @product.SKU</small>
                                        </div>
                                        <span class="badge @(product.Stock <= 5 ? "bg-danger" : "bg-warning")">
                                            @product.Stock left
                                        </span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                            <p class="text-muted mt-2 mb-0">All products in stock</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Top Customers -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-star text-warning"></i> Top Customers</h5>
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopCustomers.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var customer in Model.TopCustomers)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                                <i class="bi bi-person-fill text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@customer.FullName</div>
                                                <small class="text-muted">@customer.Email</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-primary">@customer.Sales.Count sales</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-people text-muted" style="font-size: 2rem;"></i>
                            <p class="text-muted mt-2 mb-0">No customers yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3"><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-controller="Sales" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> New Sale
                        </a>
                        <a asp-controller="Products" asp-action="Create" class="btn btn-info">
                            <i class="bi bi-box-seam"></i> Add Product
                        </a>
                        <a asp-controller="Customers" asp-action="Create" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Add Customer
                        </a>
                        <a asp-controller="BulkImport" asp-action="Index" class="btn btn-warning btn-lg">
                            <i class="bi bi-cloud-upload-fill"></i> Bulk Import
                        </a>
                        <a asp-controller="Sales" asp-action="ExportToExcel" class="btn btn-outline-success">
                            <i class="bi bi-file-excel"></i> Export Sales
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
        }
    </style>
}
