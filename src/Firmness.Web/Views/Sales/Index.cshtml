@using Firmness.Domain.Enums
@model Firmness.Domain.Common.PaginatedResult<Firmness.Domain.Entities.Sale>

@{
    ViewData["Title"] = "Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var q = ViewData["Query"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">
        <i class="bi bi-cart-check me-2"></i>Ventas
    </h1>
    <div>
        <a class="btn btn-success me-2" asp-action="ExportToExcel" title="Export to Excel">
            <i class="bi bi-file-excel"></i> Excel
        </a>
        <a class="btn btn-danger me-2" asp-action="ExportToPdf" title="Export to PDF">
            <i class="bi bi-file-pdf"></i> PDF
        </a>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i>New Sale
        </a>
    </div>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="search" name="q" value="@q" class="form-control" placeholder="Search by invoice, customer, notes..." />
        <button class="btn btn-outline-secondary" type="submit">
            <i class="bi bi-search"></i> Search
        </button>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-x-circle"></i> Clean
        </a>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Client</th>
                <th>Total</th>
                <th>Status</th>
                <th>Payment Method</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Items.Any())
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td><code>@item.Id.ToString().Substring(0, 8)...</code></td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.Customer != null)
                        {
                            <strong>@item.Customer.FullName</strong><br/>
                            <small class="text-muted">@item.Customer.Email</small>
                        }
                        else
                        {
                            <span class="text-muted">No client</span>
                        }
                    </td>
                    <td><strong>@item.TotalAmount.ToString("C")</strong></td>
                    <td>
                        @{
                            var statusClass = item.Status switch
                            {
                                SaleStatus.Completed => "badge bg-success",
                                SaleStatus.Pending => "badge bg-warning text-dark",
                                SaleStatus.Cancelled => "badge bg-danger",
                                SaleStatus.Processing => "badge bg-info",
                                SaleStatus.Refunded => "badge bg-secondary",
                                _ => "badge bg-secondary"
                            };
                        }
                        <span class="@statusClass">@item.Status.ToString()</span>
                    </td>
                    <td>
                        @{
                            var paymentClass = item.PaymentMethod switch
                            {
                                PaymentMethod.Cash => "badge bg-success",
                                PaymentMethod.Card => "badge bg-primary",
                                PaymentMethod.BankTransfer => "badge bg-info",
                                PaymentMethod.Electronic => "badge bg-warning text-dark",
                                _ => "badge bg-secondary"
                            };
                        }
                        <span class="@paymentClass">@item.PaymentMethod.ToString()</span>
                    </td>
                    <td class="text-center">
                        <a asp-action="DownloadReceipt" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1" title="Download Receipt">
                            <i class="bi bi-download"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1" title="View details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-4">
                    No sales were found.
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@* Paginación *@
@if (Model.TotalPages > 1)
{
    <nav aria-label="Paginación de ventas">
        <ul class="pagination justify-content-center">
            @{
                var startPage = Math.Max(1, Model.Page - 2);
                var endPage = Math.Min(Model.TotalPages, Model.Page + 2);
                
                if (Model.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-q="@q">Fist</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" asp-route-q="@q">Last</a>
                    </li>
                }
                
                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-q="@q">@i</a>
                    </li>
                }
                
                if (Model.Page < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" asp-route-q="@q">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-q="@q">Last</a>
                    </li>
                }
            }
        </ul>
        <p class="text-center text-muted">
            Displaying @Model.Items.Count() from @Model.Total sales
        </p>
    </nav>
}
else if (Model.Total > 0)
{
    <p class="text-center text-muted">
        Showing @Model.Total sale(s)
    </p>
}
