@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firmness</title>
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Custom Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary-orange': '#FF6B35',
                        'primary-dark': '#2C3E50',
                        'primary-blue': '#3498DB',
                        'construction-yellow': '#FFA500',
                        'secondary-green': '#27ae60',
                    }
                }
            }
        }
    </script>
    
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        .floating {
            animation: float 6s ease-in-out infinite;
        }
    </style>
</head>
<body class="h-full gradient-bg">
    <div class="min-h-screen flex">
        <!-- Left Side - Branding (Hidden on mobile) -->
        <div class="hidden lg:flex lg:w-1/2 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-orange/20 to-construction-yellow/20"></div>
            <div class="relative z-10 flex flex-col justify-center items-center p-12 text-white">
                <!-- Logo -->
                <div class="mb-8 floating">
                    <div class="w-24 h-24 bg-white/20 backdrop-blur-lg rounded-2xl flex items-center justify-center shadow-2xl">
                        <i class="bi bi-truck text-6xl text-white"></i>
                    </div>
                </div>
                
                <!-- Title -->
                <h1 class="text-5xl font-black mb-4 text-center">
                    <span class="bg-gradient-to-r from-construction-yellow to-primary-orange bg-clip-text text-transparent">
                        Firmness
                    </span>
                </h1>
                <p class="text-xl text-white/90 text-center mb-8 max-w-md">
                    Sistema de Gestión de Renta de Maquinaria y Vehículos
                </p>
                
                <!-- Features -->
                <div class="space-y-4 max-w-md">
                    <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
                        <div class="w-10 h-10 bg-construction-yellow/20 rounded-full flex items-center justify-center">
                            <i class="bi bi-check-circle-fill text-construction-yellow text-xl"></i>
                        </div>
                        <span class="text-white/90">Control total de inventario</span>
                    </div>
                    <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
                        <div class="w-10 h-10 bg-construction-yellow/20 rounded-full flex items-center justify-center">
                            <i class="bi bi-check-circle-fill text-construction-yellow text-xl"></i>
                        </div>
                        <span class="text-white/90">Gestión de clientes y pagos</span>
                    </div>
                    <div class="flex items-center gap-3 bg-white/10 backdrop-blur-sm rounded-lg p-4">
                        <div class="w-10 h-10 bg-construction-yellow/20 rounded-full flex items-center justify-center">
                            <i class="bi bi-check-circle-fill text-construction-yellow text-xl"></i>
                        </div>
                        <span class="text-white/90">Reportes y analytics en tiempo real</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-6 sm:p-12">
            <div class="w-full max-w-md">
                <!-- Mobile Logo -->
                <div class="lg:hidden text-center mb-8">
                    <div class="inline-block w-16 h-16 bg-white/20 backdrop-blur-lg rounded-xl flex items-center justify-center mb-4 floating">
                        <i class="bi bi-truck text-4xl text-white"></i>
                    </div>
                    <h1 class="text-3xl font-black text-white">
                        <span class="bg-gradient-to-r from-construction-yellow to-primary-orange bg-clip-text text-transparent">
                            Firmness
                        </span>
                    </h1>
                </div>

                <!-- Login Card -->
                <div class="glass-effect rounded-2xl shadow-2xl p-8 sm:p-10">
                    <!-- Header -->
                    <div class="mb-8">
                        <h2 class="text-3xl font-bold text-primary-dark mb-2">Bienvenido de nuevo</h2>
                        <p class="text-gray-600">Ingresa tus credenciales para continuar</p>
                    </div>

                    <!-- Error Messages -->
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
                            <div class="flex items-center">
                                <i class="bi bi-exclamation-triangle-fill text-red-500 mr-3"></i>
                                <p class="text-red-700 text-sm">@Model.ErrorMessage</p>
                            </div>
                        </div>
                    }

                    <div asp-validation-summary="All" class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-lg hidden" role="alert"></div>

                    <!-- Form -->
                    <form id="account" method="post" class="space-y-6">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <!-- Email Input -->
                        <div>
                            <label asp-for="Input.Email" class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="bi bi-envelope mr-2"></i>Correo Electrónico
                            </label>
                            <input asp-for="Input.Email" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-orange focus:border-transparent transition-all duration-200 outline-none" 
                                   autocomplete="username" 
                                   placeholder="nombre@ejemplo.com" />
                            <span asp-validation-for="Input.Email" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Password Input -->
                        <div>
                            <label asp-for="Input.Password" class="block text-sm font-semibold text-gray-700 mb-2">
                                <i class="bi bi-lock mr-2"></i>Contraseña
                            </label>
                            <input asp-for="Input.Password" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-orange focus:border-transparent transition-all duration-200 outline-none" 
                                   autocomplete="current-password" 
                                   placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="flex items-center justify-between">
                            <label class="flex items-center cursor-pointer">
                                <input asp-for="Input.RememberMe" 
                                       type="checkbox" 
                                       class="w-4 h-4 text-primary-orange border-gray-300 rounded focus:ring-primary-orange focus:ring-2" />
                                <span class="ml-2 text-sm text-gray-700">Recordarme</span>
                            </label>
                            <a asp-page="./ForgotPassword" class="text-sm font-medium text-primary-orange hover:text-primary-orange/80 transition-colors">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>

                        <!-- Submit Button -->
                        <button id="login-submit" 
                                type="submit" 
                                class="w-full bg-gradient-to-r from-primary-orange to-primary-orange/90 text-white font-semibold py-3 px-6 rounded-lg hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Iniciar Sesión
                        </button>
                    </form>

                    <!-- Divider -->
                    <div class="relative my-8">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-4 bg-white text-gray-500">o</span>
                        </div>
                    </div>

                    <!-- External Logins -->
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) > 0)
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="space-y-3">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" 
                                                name="provider" 
                                                value="@provider.Name" 
                                                class="w-full bg-white border-2 border-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-lg hover:bg-gray-50 hover:border-gray-400 transition-all duration-200 flex items-center justify-center gap-2">
                                            <i class="bi bi-@provider.Name.ToLower()"></i>
                                            Continuar con @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    }
                    <!-- Additional Links -->
                    <div class="mt-4 text-center">
                        <a asp-page="./ResendEmailConfirmation" class="text-sm text-gray-500 hover:text-gray-700 transition-colors">
                            Reenviar confirmación de correo
                        </a>
                    </div>
                </div>

                <!-- Back to Home -->
                <div class="mt-6 text-center">
                    <a href="/" class="inline-flex items-center gap-2 text-white/90 hover:text-white transition-colors">
                        <i class="bi bi-arrow-left"></i>
                        Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>